{% extends 'base.html.twig' %}

{% block title %}Edit Destination{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center">Edit Destination</h1>
        <div class="text-center">
            <img src="{{ asset('uploads/images/' ~ destination.image) }}" class="img-fluid rounded" alt="{{ destination.name }}" style="max-width: 10%; height: auto;">
        </div>
        <div class="mt-4">
            {{ include('destination/_form.html.twig', {'button_label': 'Update'}) }}
        </div>
        <div class="mt-3">
            <a class="btn btn-secondary" href="{{ path('app_destination_index') }}">Back to List</a>
        </div>

        <div class="mt-4">
            {{ include('destination/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
