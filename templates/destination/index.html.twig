{% extends 'base.html.twig' %}

{% block title %}Destination index{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center">Destination index</h1>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Duration</th>
                    <th>Image</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for destination in destinations %}
                <tr>
                    <td>{{ destination.id }}</td>
                    <td>{{ destination.name }}</td>
                    <td>{{ destination.description|slice(0, 50) }}{% if destination.description|length > 50 %}...{% endif %}</td>
                    <td>{{ destination.price }}</td>
                    <td>{{ destination.duration }}</td>
                    <td>
                        <img src="{{ asset('uploads/images/' ~ destination.image) }}" class="card-img-top" alt="{{ destination.name }}" style="width: 35px; height: 35px; object-fit: cover;">
                    </td>
                    <td>
                        <a class="btn btn-info" href="{{ path('app_destination_show', {'id': destination.id}) }}">Show</a>
                        <a class="btn btn-warning" href="{{ path('app_destination_edit', {'id': destination.id}) }}">Edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7" class="text-center">No records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a class="btn btn-primary" href="{{ path('app_destination_new') }}">Create Destination</a>
    </div>
{% endblock %}
